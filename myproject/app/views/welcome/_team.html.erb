<section id="team" class="bg-light-gray">
  <div class="container">
      <div class="row">
          <div class="col-lg-12 text-center">
              <h2 class="section-heading">Our Amazing Team</h2>
              <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
          </div>
      </div>
      <% TeamMember.all.to_a.each_slice(3) do |three_team_members| %>
        
          <div class="row">
            <% three_team_members.each do |team_member| %>
              <div class="col-sm-4">
                <div class="team-member">
                    <img src=<%= team_member.image %> class="img-responsive img-circle" alt="">
                    <h4><%= team_member.name %></h4>
                    <p class="text-muted"><%= team_member.designation %></p>
                    <ul class="list-inline social-buttons">
                        <li><a href="#"><i class="fa fa-twitter"></i></a>
                        </li>
                        <li><a href="#"><i class="fa fa-facebook"></i></a>
                        </li>
                        <li><a href="#"><i class="fa fa-linkedin"></i></a>
                        </li>
                    </ul>
                </div>
              </div>
            <% end %>
          </div>
        
      <% end %>
      <div class="row">
          <div class="col-lg-8 col-lg-offset-2 text-center">
              <p class="large text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut eaque, laboriosam veritatis, quos non quis ad perspiciatis, totam corporis ea, alias ut unde.</p>
          </div>
      </div>
  </div>
</section>


