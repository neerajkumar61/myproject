<%= form_for @team_member, :html => { :class => "form-horizontal team_member" } do |f| %>

  <% if @team_member.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@team_member.errors.count, "error") %> prohibited this team_member from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @team_member.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :image, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :image, :class => 'form-control' %>
    </div>
    <%=f.error_span(:image) %>
  </div>
  <div class="form-group">
    <%= f.label :designation, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :designation, :class => 'form-control' %>
    </div>
    <%=f.error_span(:designation) %>
  </div>

  <div class="form-group">
    <%= f.label :twitter_link, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :twitter_link, :class => 'form-control' %>
    </div>
    <%=f.error_span(:twitter_link) %>
  </div>

  <div class="form-group">
    <%= f.label :facebook_link, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :facebook_link, :class => 'form-control' %>
    </div>
    <%=f.error_span(:facebook_link) %>
  </div>

  <div class="form-group">
    <%= f.label :linkedin_link, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :linkedin_link, :class => 'form-control' %>
    </div>
    <%=f.error_span(:linkedin_link) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                team_members_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

