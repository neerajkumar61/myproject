<%- model_class = TeamMember -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:designation) %></th>
      <th><%= model_class.human_attribute_name(:twitter_link) %></th>
      <th><%= model_class.human_attribute_name(:facebook_link) %></th>
      <th><%= model_class.human_attribute_name(:linkedin_link) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @team_members.each do |team_member| %>
      <tr>
        <td><%= link_to team_member.id, team_member_path(team_member) %></td>
        <td><%= team_member.name %></td>
        <td><%= team_member.image %></td>
        <td><%= team_member.designation %></td>
        <td><%= team_member.twitter_link %></td>
        <td><%= team_member.facebook_link %></td>
        <td><%= team_member.linkedin_link %></td>
        <td><%=l team_member.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_team_member_path(team_member), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      team_member_path(team_member),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_team_member_path,
            :class => 'btn btn-primary' %>



