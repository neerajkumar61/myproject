<div class="border-form-div">
  <h2><font face="Purisa"><center>Sign In</center></font></h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.email_field :email, :placeholder => " Email *", :autofocus => true %>
    <%= f.password_field :password, :placeholder => " Password *" %>
    <% if devise_mapping.rememberable? -%>
      <label class="checkbox"><%= f.check_box :remember_me %><%= f.label :remember_me, "Rembmer me" %>  </label>

    <% end -%>
    <%= f.submit "Sign in",:class=>'btn btn-primary' %>
  <% end %>
  <%= render "devise/shared/links" %>

  <%= link_to "Continue Without Log In, Happy ?", root_path, :class => "btn btn-primary btn-xs" %><br />

</div>
